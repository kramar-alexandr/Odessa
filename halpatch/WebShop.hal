global procedure CustTimeTableAction()
begin
  record RcVc RepSpec;
  time t1,t2,curt,curtnew;
  string 5 hr,mn;

    t1 = StringToTime("7:30");
    t2 = StringToTime("14:30");
    
    curt = CurrentTime; 
    hr = GetHour(curt);
    if (len(hr)==1) then begin
    	hr = "0" & hr;
    end;
    mn = GetMinute(curt);
    if (len(mn)==1) then begin
    	mn = "0" & mn;
    end;
    curtnew = StringToTime(hr & ":" & mn);

    if (curtnew==t1 or curtnew==t2) then begin
    	LogText(0,"CustTimeTableAction at planned time: " & curtnew);
    	ExportStockCSVMn(RepSpec);
    end;  
    
return;
end;

