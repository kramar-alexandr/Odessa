global updating procedure RecalcINVolumeMn() //Edit***************************Sasha2,13:44 24.06.2014 {begin	record INVc INr;	roundmode rnd;			rnd = DefaultValRoundoff;  	rnd.decimals = 0;  	rnd.mode = kRoundingModeHalfUp;		INr.Code = "";	while(loopmain(INr,1,true))begin		if (INr.Volume > 0) then begin			//INr.Volume = Round(INr.Volume,rnd) / 100000; //Edit***************************Sasha2,17:25 30.07.2014			INr.Volume = INr.Volume / 1000; //Edit***************************Sasha2,11:24 31.07.2014			RECORDSTORE(INr, true);		end;	end;	return;end; //Edit***************************Sasha2,13:45 24.06.2014 }global updating procedure DelLoyaltyCardMn() //Edit***************************Sasha2,13:44 24.06.2014 {begin	record LoyaltyCardVc LoyaltyCardr;	Boolean TrHs;		LoyaltyCardr.SerNr = "";	TrHs = true;	while(loopmain(LoyaltyCardr,1,TrHs))begin		if (TrHs) then begin			RecordDelete(LoyaltyCardr);    		StepBack(LoyaltyCardr);		end;	end;	return;end; //Edit***************************Sasha2,13:45 24.06.2014 }